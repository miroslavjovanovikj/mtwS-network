<% include ../partials/header%>
<h1 class="createTitle">Create New Item To Your Budget</h1>
<div class="selecMenu">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form action="/all" method="post">
          <select class="form-control selectSty" name="expInc" id="expInc">
            <option value="inc">+</option>
            <option value="exp">-</option>
          </select>
          <input class="form-control inputDec" type="text" name="item" placeholder="Name of item"maxlength="11">
          <input class="form-control inputDec" type="number" name="value" placeholder="Value" min="-50000" max="80000">
          <input class="selecMenuButton" type="submit" name="register">
        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer%>
